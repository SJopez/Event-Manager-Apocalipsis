<FileSelectorWindow>:
    # Ventana del selector de archivos
    size_hint: None, None
    size: (900, 600)
    orientation: "vertical"
    pos_hint: {'center_x': .5, 'center_y': .5}
    canvas.before:
        Color:
            rgba: 0.12, 0.12, 0.12, 0.95
        Rectangle:
            pos: self.pos
            size: self.size

<Title>:
    # Título de la ventana del selector de archivos
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            points: (self.x, self.y, self.x + 900, self.y)
            width: 1.2
    canvas.before:
        Color:
            rgba: 0.07, 0.07, 0.07, 0.9
        Rectangle:
            pos: self.pos
            size: (900, 50)
    padding: 10
    font_size: 32
    size_hint: None, None
    size: self.texture_size
    font_name: 'fonts/Roboto,Roboto_Condensed/Roboto_Condensed/RobotoCondensed-VariableFont_wght.ttf'
    size_hint_y: None
    height: 50

<Path>:
    # Etiqueta que muestra la ruta seleccionada
    size_hint: None, None
    font_size: 15
    size: (400, 30)
    text_size: (400, 30)
    pos_hint: {'x': 0, 'center_y': .5}
    foreground_color: (1, 1, 1, 1)
    background_color: (0.12, 0.12, 0.12, 1)
    padding: 6
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 12)
            width: 1.01

<BottomBar>:
    # Barra inferior con el botón de selección y la ruta
    padding: 10
    size_hint_y: None
    height: 60
    spacing: 10

<SelectionButton>:
    # Botón para confirmar la selección
    background_color: 0, 0, 0, 0
    markup: True
    text: "[b] Seleccionar [/b]"
    size_hint: None, None
    height: 36
    pos_hint: {'x': 0, 'center_y': .5}
    canvas.before:
        Color:
            rgba: 0.12, 0.12, 0.12, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]
    canvas.after:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            rounded_rectangle: (self.x, self.y, self.width, self.height, 8)
            width: 1.01
